<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<AssemblyName>Peachpie.Blazor</AssemblyName>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Description>A library providing integration between Peachpie and Blazor.</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Version>$(PeachpieBlazorVersion)</Version>
	</PropertyGroup>

	<!--package-->
	<PropertyGroup>
		<PackageTags>Peachpie, Blazor, PHP, C#, ASP.NET</PackageTags>
		<PackageId>Peachpie.Blazor</PackageId>
	</PropertyGroup>
			
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.16" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Forms" Version="6.0.16" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.16" />
		<PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
		<PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
		<PackageReference Include="System.Net.Http.Json" Version="6.0.1" />
		<PackageReference Include="Peachpie.Runtime" Version="$(PeachpieVersion)" />
	</ItemGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

</Project>